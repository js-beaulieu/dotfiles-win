#!/usr/bin/env bash

echo "Install Iosevka nerd font"

# dependencies
sudo apt update
sudo apt install -y git fontconfig

# install font if missing
found=$(fc-list "Iosevka Term" | wc -l)
if [ "$found" -gt 0 ]; then
    echo "Iosevka nerd font is already installed"
else
    git clone --depth 1 https://github.com/ryanoasis/nerd-fonts.git /tmp/nerd-fonts
    cd /tmp/nerd-fonts && ./install.sh "Iosevka"
    rm -rf /tmp/nerd-fonts
fi
