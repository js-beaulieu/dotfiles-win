#
# wm independent hotkeys
#

# terminal emulator
{alt, super} + Return
	kitty

# program launcher
{alt, super} + slash
    rofi -show combi

# window switcher
alt + Tab
	rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "config reloaded"

#
# bspwm hotkeys
#

# restart bspwm
super + shift + r
	bspc wm -r && notify-send "bspwm" "config reloaded"

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# alternate between the tiled and fullscreen
super + shift + f
	bspc node -t \~fullscreen

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# modes
#
# resize mode
super + r : {h, j, k, l}
	{bspc node -z right -60 0; \
	bspc node -z left +60 0, \
	bspc node -z top 0 -60; \
	bspc node -z bottom 0 +60, \
	bspc node -z top 0 +60; \
	bspc node -z bottom 0 -60, \
	bspc node -z right +60 0; \
	bspc node -z left -60 0}

# move a floating window
super + alt + r : {h, j, k, l}
	bspc node -v {-60 0,0 60,0 -60,60 0}
