    corner_radius = 10

    # size and position
    monitor = 0
    follow = keyboard
    origin = top-center
    width = 500
    height = 200
    offset = 0x60

    # key bindings
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

    # mouse bindings
    mouse_left_click = do_action
    mouse_middle_click = close_current
    mouse_right_click = context

    # behavior
    stack_duplicates = true
    hide_duplicate_count = false
    indicate_hidden = yes
    shrink = no
    word_wrap = yes
    sort = yes
    idle_threshold = 120
    show_age_threshold = 60
    sticky_history = yes
