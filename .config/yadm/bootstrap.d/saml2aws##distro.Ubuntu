#!/usr/bin/env bash

echo "Install saml2aws"

# dependencies
sudo apt update
sudo apt install -y curl

# install
CURRENT_VERSION=$(curl -Ls https://api.github.com/repos/Versent/saml2aws/releases/latest | grep 'tag_name' | cut -d'v' -f2 | cut -d'"' -f1)
wget -c https://github.com/Versent/saml2aws/releases/download/v${CURRENT_VERSION}/saml2aws_${CURRENT_VERSION}_linux_amd64.tar.gz -O - | tar -xzv -C $HOME/.local/bin
chmod u+x $HOME/.local/bin/saml2aws
hash -r

