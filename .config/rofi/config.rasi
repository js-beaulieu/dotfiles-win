configuration {
  combi-modi: "run,drun";
  matching: "fuzzy";
  monitor: -1;
  scroll-method: 1;
  show-icons: true;
  sorting-method: "fzf";
  terminal: "kitty";
  
  combi {
    display-name: "run";
  }
  
  window {
    display-name: "windows";
  }
  
  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

@theme "onedark"
